<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.kyay10.prettify-kotlin</id>
    <name>Prettify Kotlin</name>
    <vendor>kyay10</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <lang.foldingBuilder language="kotlin"
                             implementationClass="io.github.kyay10.prettifykotlin.PrettyFoldingBuilder"/>
        <lang.foldingBuilder language="kotlin"
                             implementationClass="io.github.kyay10.prettifykotlin.TokenFoldingBuilder"/>

        <projectConfigurable
                parentId="tools"
                id="io.github.kyay10.prettifykotlin.settings"
                instance="io.github.kyay10.prettifykotlin.SettingsConfigurable"
                displayName="Prettify Kotlin">
            <configurable
                    id="io.github.kyay10.prettifykotlin.settings.identifiers"
                    displayName="Identifiers"
                    instance="io.github.kyay10.prettifykotlin.IdentifierSettingsConfigurable"/>
            <configurable
                    id="io.github.kyay10.prettifykotlin.settings.tokens"
                    displayName="Tokens"
                    instance="io.github.kyay10.prettifykotlin.TokenSettingsConfigurable"/>
            <configurable
                    id="io.github.kyay10.prettifykotlin.settings.fqn"
                    displayName="Fully Qualified Names"
                    instance="io.github.kyay10.prettifykotlin.FqNameSettingsConfigurable"/>
        </projectConfigurable>
    </extensions>
    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>
</idea-plugin>
